algoritmo conversãoTempo

inteiro: s0, h, min, seg;

escreva("Digite o tempo em segundos: ");
leia(s0);
enquanto (s0 <= 0) {
    escreva("Entrada inválida! Por favor, digite um número positivo: ");
    leia(s0)
}    

s1 <- inteiro(s0)

h <- s1 / 3600
min <- s1 % 3600 / 60
seg <- s1 % 60

escreva("\n", h, ":", min, ":", seg)
